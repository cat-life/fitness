<view class="container">
  <canvas canvas-id="lineCanvas" disable-scroll="true" class="canvas" bindtouchstart="touchHandler" bindtouchmove="moveHandler" bindtouchend="touchEndHandler"></canvas>
  <view class="div-title">拖动图表查看牛牛的体重记录</view>
  <image mode="widthFix" src="/images/icon/plus_active.png" class="add-btn" bindtap='handleChooseAction'></image>
  <scroll-view class="history-container" scroll-y>
    <view wx:for="{{dateList}}" wx:for-index="idx" wx:key="idx" wx:for-item="singleData" class="history-item">
      <view class="item-icon">
        <image mode="aspectFit" src="/images/icon/time.png"></image>
      </view>
      <view class="item-main">
        <view class="item-main-title">{{singleData.dateRange}} · {{singleData.date}}</view>
        <view class="item-main-subtitle">体重 <view>{{singleData.data}}斤</view></view>
      </view>
      <view class="item-img">
        <image wx:if="{{singleData.imgUrl}}" mode="widthFix" src="{{singleData.imgUrl}}"></image>
      </view>
    </view>
  </scroll-view>
</view>